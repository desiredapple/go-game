<Window x:Class="Game_go.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_go"
        mc:Ignorable="d"
        Title="Game Go" Height="700" Width="700" MinHeight="400" MinWidth="400">
    <Grid Background="Peru">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Viewbox x:Name="ViewboxBoard" Stretch="Uniform" Grid.Row="0"/>

        <Viewbox Grid.Row="1" Stretch="Uniform" Height="30" Margin="5" HorizontalAlignment="Right">
            <Button Content="Завершить партию"  Click="EndGame"/>
        </Viewbox>
    </Grid>
</Window>
